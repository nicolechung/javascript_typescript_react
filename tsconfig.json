{
    "compilerOptions": {
      "allowJs": true,
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react",
      "outDir": "lib",
      "strict": true,
      "lib": [
        "es2015",
        "es2016",
        "es2017",
        "dom"
      ],
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "baseUrl": ".",
      "sourceMap": true,
      "paths": {
        "src/*": ["./src/*"],
        "components/*": ["./src/components/*"],
        "common/*": ["./src/common/*"],
      }
    },
    "include": [
      "src"
    ],
    "exclude": [
      "dist",
      "node_modules"
    ]
}